.contain-to-grid
  %nav.top-bar{"data-topbar" => ""}
    %ul.title-area
      %li.name
        %h1= link_to(image_tag("hudacard-logo.png"), root_path)
      %li.toggle-topbar.menu-icon
        %a{href: "#"}
          %span Menu
    %section.top-bar-section
      / Right Nav Section
      %ul.right
        %li.active
          = link_to 'Play Now!', root_path
        %li
          = link_to 'Contact', contact_path
        - if !current_user.nil?
          %li= link_to 'Account', account_user_path(current_user)
        %li= link_to 'Fair Play (About)', about_path

