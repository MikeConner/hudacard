-# Displayed for a "new" game -- no bet yet
.container
  .span10.offset1
    = render :partial => 'header', :locals => {:game => @game}
    .row
      .span5.well 
        %center
          %h3 You bet #{@game.bet} m฿ on #{@game.color}
    .row
      - for i in 1..5 do
        .span1.cardarea
          .card.card-back{:id => "card#{i}"}
          %cardfront{:id => "seq#{i}", :class => "card card-#{@cards[i-1].value}-#{@cards[i-1].suit.downcase}"}
    .row
      %br
    - range = @game.user.bet_range
    = hidden_field_tag :min_bet, range[:min]
    = hidden_field_tag :max_bet, range[:max]
    .row
      .span5.well
        .row
          .span3
            = render :partial => 'balance'
          .span2
            #announcer
              %h3 Good Luck
            - notes = @game.mid_game_notes
            %h3
              .midgame#announcer2= notes[0]
            %h3
              .midgame#announcer3= notes[1]
            %h3
              .midgame#announcer4= notes[2]
            #winbox
              - if @game.payout >= 0
                %h3 WIN
              - else
                %h3 LOSE
              %h3= @game.ratio.to_s + "X"
              %h5= @game.payout.round(1).to_s + "m฿"
            %p== (#{range[:min]}m฿ - #{range[:max]}m฿)
    = form_for @new_game do |f|
      = render :partial => 'bet_fields', :locals => { :f => f, :game => @new_game }
    = render :partial => 'fund_account'
    = render :partial => 'withdrawal'
    .row
      .span5.well
        .row
          %h2 Jokers:
          .span1
            %card.card.card-1-joker
          .span1
            %card.card.card-2-joker
          .span3#hash
            MD5 Hash for this game:
            = @new_game.game_key
            %br
            Key for last game:
            = @game.security_code
= render :partial => 'qrcode'
