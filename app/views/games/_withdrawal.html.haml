= form_tag withdrawal_user_path(current_user) do |f|
  .row
    .span5.well
      .row          
        .span3
          = text_field_tag :extract_addy, current_user.outbound_bitcoin_address, :placeholder => "Your BTC address"
        .span1
          = submit_tag "Cash Out", :class => 'btn btn-danger'
      .row
        .span4.offset1
          %i transaction includes a 0.0001 BTC miners fee.
